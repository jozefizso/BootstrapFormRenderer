{
	"name": "jozefizso/bootstrap-form-renderer",
	"type": "library",
	"description": "Nette forms renderer with bootstrap",
	"keywords": ["nette", "kdyby", "forms", "bootstrap"],
	"homepage": "https://github.com/jozefizso/BootstrapFormRenderer",
	"license": ["BSD-3-Clause", "GPL-2.0", "GPL-3.0"],
	"authors": [
		{
			"name": "Filip ProchÃ¡zka",
			"homepage": "http://filip-prochazka.com",
			"email": "filip@prochazka.su"
		}
	],
	"support": {
		"issues": "https://github.com/jozefizso/BootstrapFormRenderer/issues"
	},
	"require": {
		"php": ">=5.6",
		"nette/nette": "~2.1.0"
	},
	"require-dev": {
		"nette/tester": "~1.7.2",
		"jakub-onderka/php-parallel-lint": "~0.9.2",
		"cweagans/composer-patches": "^1.7"
	},
	"extra": {
		"patches": {
			"nette/tester": {
				"Don't truncate test names": "patches/nette-tester-no-truncate-test-names.patch"
			}
		}
	},
	"autoload": {
		"psr-0": {
			"Kdyby\\BootstrapFormRenderer\\": "src/"
		}
	},
	"config": {
		"allow-plugins": {
			"cweagans/composer-patches": true
		}
	}
}
